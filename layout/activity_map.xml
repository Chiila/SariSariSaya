<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_map"
    tools:context=".Map">

    <Button
        android:id="@+id/map_duckGame"
        android:layout_width="178dp"
        android:layout_height="246dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="5dp"
        android:alpha="0"
        android:enabled="true"
        android:text="Duck Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/map_circusGame"
        android:layout_width="158dp"
        android:layout_height="300dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="124dp"
        android:alpha="0"
        android:enabled="true"
        android:text="Circus Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/map_cardGame"
        android:layout_width="187dp"
        android:layout_height="275dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="148dp"
        android:alpha="0"
        android:enabled="true"
        android:text="Card game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/map_foodGame"
        android:layout_width="155dp"
        android:layout_height="300dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="20dp"
        android:text="Food game"
        android:alpha="0"
        android:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wallet"
        android:layout_width="212dp"
        android:layout_height="68dp"
        android:background="@drawable/wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_foodGame">

        <TextView
            android:id="@+id/map_totalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:text="PHP 00000000.00"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>