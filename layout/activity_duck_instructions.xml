<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/duck_game"
    tools:context=".DuckInstructions">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_instructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/duck_howto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/duck_instructionsRecycle"
            android:layout_width="220dp"
            android:layout_height="290dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/imgBtn_duckHome"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="Home Button"
        android:scaleType="centerCrop"
        android:src="@drawable/duck_menu"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout_instructions"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout_instructions"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_instructions" />

</androidx.constraintlayout.widget.ConstraintLayout>